{% extends 'base.html.twig' %}

{% block header %}

{% endblock %}

{% block sidebar %}

{% endblock %}

{% block footer %}

{% endblock %}
{% block body %}
    <header id="home" class="header" style="height: 900px;">
    <div class="container" style="position: center;">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4" style="margin-top: 100px;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center" style="position: center;">



                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                    <p class="text-center small">Enter your personal details to create account</p>
                                </div>


                                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                <div class="col-12">
                                    <label for="yourName" class="form-label">Nom</label>

                                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}

                                </div>


                                <div class="col-12">
                                    <label for="yourName" class="form-label">Prenom</label>

                                    {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourName" class="form-label">Age</label>

                                    {{ form_widget(form.age,{'attr':{'class':'form-control'}}) }}

                                </div>{# test #}
                                <div class="col-12">
                                    <label for="yourName" class="form-label">Adresse</label>

                                    {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourName" class="form-label">Numero de telephone</label>

                                    {{ form_widget(form.numtel,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Role</label>
                                    {{ form_widget(form.role,{'attr':{'class':'form-control'}}) }}

                                </div>
                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">Email</label>
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}

                                </div>



                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Mot de passe</label>
                                    {{ form_widget(form.mdp.first,{'attr':{'class':'form-control'}}) }}

                                </div>

                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">Confirmer Mot de passe</label>
                                    {{ form_widget(form.mdp.second,{'attr':{'class':'form-control'}}) }}
                                    <div class="invalid-feedback">Please confirm your password!</div>
                                </div>

                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" name="terms" type="checkbox" value="" id="acceptTerms" required="">
                                        <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                                        <div class="invalid-feedback">You must agree before submitting.</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">Already have an account? <a href="pages-login.html">Log in</a></p>
                                </div>
                                {{ form_end(form) }}

                            </div>
                        </div>

                        <div class="credits">
                            <!-- All the links in the footer should remain intact. -->
