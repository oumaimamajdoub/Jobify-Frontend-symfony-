{% extends 'base.html.twig' %}



{% block header %}

{% endblock %}

{% block sidebar %}

{% endblock %}

{% block footer %}

{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<header id="home" class="header" style="height: 700px;">

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4" style="margin-top: 29px;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">


                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                                <p class="text-center small">Enter your username &amp; password to login</p>
                            </div>

                            <form class="row g-3 needs-validation" novalidate="" method="post">
                                <table>
                                    <tr>
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                     {% if app.user %}
                                         <div class="mb-3">
                                             You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                         </div>
                                     {% endif %}
                                    </tr>
                                    <tr>
                                <div class="col-12">

                                    <td><label for="yourUsername" class="form-label">Email</label></td>
                                    <div class="input-group has-validation"><td>
                                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                       <div class="invalid-feedback">Please enter your email.</div>
                                    </td></div>
                                    </tr>
                                </div>

                                <div class="col-12"><tr>
                                    <td><label for="yourPassword" class="form-label">Password</label></td>
                                    <td><input type="password" name="mdp" id="inputmdp" class="form-control" autocomplete="mdp" required>
                                    <div class="invalid-feedback">Please enter your password!</div></td></tr>
                                </div>
                                <tr>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >
                                </tr>
                                <div class="col-12"><tr><td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Remember me</label></td>
                                    </div>
                                </div>

                                    <td>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Login</button>
                                </div></td>
                                </tr>
                                <div class="col-12">
                                    <tr><td>
                                    <p class="small mb-0">Don't have account? <a href="{{ path('registration') }}">Create an account</a></p>
                                        </td></tr>
                                </div>
                                </table>
                            </form>

                        </div>
                    </div>



                </div>
            </div>
        </div>

    </section>

</div>
</header>
{% endblock %}


